<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Steam Games</title>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="/js/index.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <div class="container my-5">
        <h1 class="text-center mb-4">Steam Games List</h1>

        <div class="games-list-section">
            <h2>Games</h2>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>App ID</th>
                        <th>Game Name</th>
                        <th>Release Year</th>
                        <th>Price</th>
                        <th>Windows</th>
                        <th>Mac</th>
                        <th>Linux</th>
                        <th>Metacritic Score</th>
                        <th>Genres</th>
                        <th>Developer(s)</th>
                        <th>Publisher(s)</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                    <% games.forEach((game, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= game.app_id %></td>
                            <td><%= game.name %></td>
                            <td><%= game.release_date_year %></td>
                            <td><%= game.price %></td>
                            <td><%= game.windows ? 'Yes' : 'No' %></td>
                            <td><%= game.mac ? 'Yes' : 'No' %></td>
                            <td><%= game.linux ? 'Yes' : 'No' %></td>
                            <td><%= game.metacritic_score %></td>
                            <td>
                                <%= game.genres ? game.genres.split(',').join(', ') : 'None' %>
                            </td>
                            <td>
                                <%= game.developers ? game.developers.split(',').join(', ') : 'None' %>
                            </td>
                            <td>
                                <%= game.publishers ? game.publishers.split(',').join(', ') : 'None' %>
                            </td>
                            <td>
                                <a href="/editGame?id=<%= game.app_id %>"><button class="btn btn-primary">Edit</button></a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                    <a class="page-link" href="/?page=<%= currentPage - 1 %>">Previous</a>
                </li>
                <li class="page-item disabled">
                    <span class="page-link">Page <%= currentPage %> of <%= totalPages %></span>
                </li>
                <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                    <a class="page-link" href="/?page=<%= currentPage + 1 %>">Next</a>
                </li>
            </ul>
        </nav>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
